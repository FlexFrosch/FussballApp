<Window x:Class="FussballApp.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FussballApp"
        mc:Ignorable="d"
        Title="ProfileWindow" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Profil" Foreground="Black" FontSize="20" VerticalAlignment="Center" Grid.Column="0" />

            <Button x:Name="ProfilEdit" Content="Bearbeiten" Height="30" Width="100" Grid.Column="1"
            HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5,0,0,0" Click="ProfilEdit_Click"/>
        </Grid>


        <StackPanel  Grid.Row="1">
            <TextBlock Text="Meine Teams:" Foreground="Black" FontSize="20" Width="136" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock Text="Meine Ligen:" Margin="5" Foreground="Black" FontSize="20"  HorizontalAlignment="Left"/>
        </StackPanel>


        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="8">
            <Button Content="🏠 Home" Width="100" Margin="20" Padding="5" Click="ShowHome" Background="White"/>
            <Button Content="📊 Ligen" Width="100" Margin="20"  Padding="5" Click="ShowLeagues" Background="White"/>
            <Button Content="👤 Profil" Width="100" Margin="20" Padding="5" Click="ShowProfile" Background="White"/>
        </StackPanel>
    </Grid>
</Window>
