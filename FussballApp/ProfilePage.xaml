<Page x:Class="FussballApp.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FussballApp"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800" Background="White"
      Title="ProfilePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Profil" Foreground="Black" FontSize="20"  HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="8">
            <Button x:Name="HomeButton" Content="🏠 Home"   Width="80" Margin="20" Padding="5"
              Background="#F5F5F5" Click="HomeButton_Click"/>
            <Button x:Name="LigenButton" Content="📊 Ligen"  Width="80" Margin="20" Padding="5"
              Background="#F5F5F5" Click="LigenButton_Click"/>
            <Button x:Name="ProfileButton" Content="👤 Profil" Width="80" Margin="20" Padding="5"
              Background="#F5F5F5" Click="ProfileButton_Click"/>
        </StackPanel>
    </Grid>
 
</Page>
